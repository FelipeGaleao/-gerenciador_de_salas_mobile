<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_pagina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidades"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/titulo_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionando"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Nome da especialidade"
            app:placeholderText="Insira o nome da especialidade">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_speciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_save_speciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#A52929"
            android:text="Salvar especialidade" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>